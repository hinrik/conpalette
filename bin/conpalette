    ],
    # http://en.wikipedia.org/wiki/List_of_8-bit_computer_hardware_palettes#ZX_Spectrum
    # The original palette has black listed twice so I replaced one with a
    # dark grey color, which it was missing.
    'sinclair' => [
        '000000',
        'CA0000',
        '00CA00',
        'CACA00',
