#!/usr/bin/env perl

package App::ConPalette;

use strict;
use warnings FATAL => 'all';
use Getopt::Long qw(:config auto_help);
use Pod::Usage;

my %palettes = (
    # KDE Konsole's default theme
    'konsole' => [
        '000000',
        'B21818',
        '18B218',
        'B26818',
        '1818B2',
        'B218B2',
        '18B2B2',
        'B2B2B2',

        '686868',
        'FF5454',
        '54FF54',
        'FFFF54',
        '5454FF',
        'FF54FF',
        '54FFFF',
        'FFFFFF',
    ],
    # rxvt's default theme
    'rxvt' => [
        '000000',
        'CD0000',
        '00CD00',
        'CDCD00',
        '0000CD',
        'CD00CD',
